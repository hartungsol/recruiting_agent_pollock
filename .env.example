# Database Configuration
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/recruiting_agent

# LLM Configuration (Ollama - Local)
# Model must be available via `ollama list`
LLM_MODEL_NAME=gpt-oss:20b
LLM_TIMEOUT=120
LLM_MAX_RETRIES=1

# OSCAR Reasoner Configuration
OSCAR_ENDPOINT=http://localhost:9000
OSCAR_TIMEOUT=30

# Vector Store Configuration
VECTOR_STORE_PATH=./data/vector_store
EMBEDDING_MODEL=all-MiniLM-L6-v2

# Application Settings
LOG_LEVEL=INFO
DEBUG=false
